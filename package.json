{
  "name": "@leanylabs/formula-engine",
  "version": "1.0.4",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev ./src/index.ts",
    "build": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "chevrotain": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.1",
    "ts-jest": "^27.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.spec.+(ts|tsx|js)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testEnvironment": "node",
    "maxConcurrency": 1
  },
  "files": [
    "dist/**/*",
    "package.json",
    "README.md",
    "LICENSE"
  ]
}
